<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rajce.rajceUploader" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="rajce.rajceUploader.TestAPI"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="rajce.rajceUploader.ImageGallery"
            android:label="@string/app_name"
            android:theme="@style/AppDark" >
        </activity>
        <activity
            android:name="rajce.rajceUploader.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="rajce.rajceUploader.RecentGallery"
            android:label="@string/title_activity_recent_gallery"
            android:theme="@style/AppDark" >
        </activity>
        <activity
            android:name="rajce.rajceUploader.OldNewDialog"
            android:label="@string/title_activity_old_new_dialog" >
        </activity>
        <activity
            android:name="rajce.rajceUploader.NewAlbum"
            android:label="@string/title_activity_new_album" >
        </activity>
    </application>

</manifest>
